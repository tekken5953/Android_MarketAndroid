<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/add_weight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="설정 변경"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/add_weight_weight_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_weight_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="중량 정보 : "
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/add_weight_weight_edit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/add_weight_title"
        android:gravity="center"
        android:background="@drawable/boundary"
        android:layout_marginLeft="25dp"
        android:textSize="14sp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/add_weight_weight_tx"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_weight_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/add_weight_weight_edit"
        android:text=" Kg" />

    <TextView
        android:id="@+id/add_weight_price_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_weight_weight_tx"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="시세 : "
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/add_weight_price_edit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/add_weight_weight_edit"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/boundary"
        android:layout_toRightOf="@+id/add_weight_weight_tx"/>

    <TextView
        android:id="@+id/kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_weight_weight_tx"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/add_weight_price_edit"
        android:textColor="@color/black"
        android:text=" 원" />

    <TextView
        android:id="@+id/add_weight_limit_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_weight_price_tx"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="1인당 등록 제한 : "
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/add_weight_limit_edit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/add_weight_price_edit"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/boundary"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/add_weight_limit_tx"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_weight_price_tx"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/add_weight_limit_edit"
        android:textColor="@color/black"
        android:text=" Box" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/add_weight_limit_edit"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/add_weight_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffff00"
            android:text="@string/ok"
            android:textStyle="bold"
            android:textColor="@color/primary_blue" />

        <Button
            android:id="@+id/add_weight_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="#00ffff00"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textColor="@color/primary_blue" />
    </TableRow>
</RelativeLayout>