<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_edit_id"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cookierunbold"
        android:text="Farmers Market"
        android:gravity="center"
        android:textColor="@color/primary_blue"
        android:textSize="45sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login_edit_id"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_above="@+id/login_edit_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/boundary"
        android:inputType="number"
        android:gravity="center"
        android:textSize="15sp"
        android:hint="핸드폰 번호를 입력하세요." />

    <EditText
        android:id="@+id/login_edit_pwd"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/boundary"
        android:gravity="center"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:textSize="15sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/login_edit_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_blue"
        android:text="@string/login"
        android:fontFamily="@font/cookierunregular"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/sign_up"
        android:id="@+id/login_sign_up"
        android:layout_below="@+id/login_btn"
        android:background="@drawable/button_white"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cookierunregular"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>


</RelativeLayout>